<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <%= book.user.name %>
  <p>title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>
