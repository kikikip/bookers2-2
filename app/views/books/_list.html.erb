<div>
  <h3><%= user.name %></h3>
  <h3><%= user.introduction %></h3>
  <%= image_tag user.get_profile_image(100,100) %>
  <% if user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

